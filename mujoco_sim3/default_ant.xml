<mujoco model="ant">

  <asset>
    <texture name="grid" type="2d" builtin="checker"
             width="512" height="512"
             rgb1="0.85 0.85 0.85" rgb2="0.7 0.7 0.7"/>
    <material name="grid_mat" texture="grid"
              texrepeat="4 4" reflectance="0.2"/>
    <texture name="skybox" type="skybox" builtin="gradient"
             width="512" height="512"
             rgb1="0.5 0.7 0.9" rgb2="0.0 0.0 0.0"/>
  </asset>

  <worldbody>
    <!-- 地面 -->
    <geom name="ground" type="plane" size="10 10 0.1"
          material="grid_mat"
          friction="1 0.005 0.0001"
          contype="1" conaffinity="1"/>

    <!-- 光源 -->
    <light name="main_light"
           pos="0 0 4" dir="0 0 -1"
           diffuse="0.8 0.8 0.8" specular="0.2 0.2 0.2"
           castshadow="true"/>
    <light name="fill_light"
           pos="1 -1 2" dir="-0.5 0.5 -1"
           diffuse="0.4 0.4 0.4" specular="0.0 0.0 0.0"
           castshadow="false"/>

    <!-- 躯干 -->
    <body name="torso" pos="0 0 0.75">
      <freejoint/>
      <geom type="sphere" size="0.25" mass="1" rgba="0.8 0.6 0.4 1"/>

      <!-- 前左腿 -->
      <body name="front_left_hip" pos="0.2 0.2 0">
        <joint name="fl_hip" type="hinge" axis="0 0 1" range="-40 40"/>
        <geom type="capsule" fromto="0 0 0 0.2 0.2 0" size="0.08" mass="0.1" rgba="0.8 0.6 0.4 1"/>
        <body name="front_left_ankle" pos="0.2 0.2 0">
          <joint name="fl_ankle" type="hinge" axis="1 1 0" range="30 100"/>
          <geom type="capsule" fromto="0 0 0 0.2 0.2 -0.3" size="0.08" mass="0.1" rgba="0.8 0.6 0.4 1"/>
        </body>
      </body>

      <!-- 前右腿 -->
      <body name="front_right_hip" pos="0.2 -0.2 0">
        <joint name="fr_hip" type="hinge" axis="0 0 1" range="-40 40"/>
        <geom type="capsule" fromto="0 0 0 0.2 -0.2 0" size="0.08" mass="0.1" rgba="0.8 0.6 0.4 1"/>
        <body name="front_right_ankle" pos="0.2 -0.2 0">
          <joint name="fr_ankle" type="hinge" axis="1 -1 0" range="30 100"/>
          <geom type="capsule" fromto="0 0 0 0.2 -0.2 -0.3" size="0.08" mass="0.1" rgba="0.8 0.6 0.4 1"/>
        </body>
      </body>

      <!-- 后左腿 -->
      <body name="back_left_hip" pos="-0.2 0.2 0">
        <joint name="bl_hip" type="hinge" axis="0 0 1" range="-40 40"/>
        <geom type="capsule" fromto="0 0 0 -0.2 0.2 0" size="0.08" mass="0.1" rgba="0.8 0.6 0.4 1"/>
        <body name="back_left_ankle" pos="-0.2 0.2 0">
          <joint name="bl_ankle" type="hinge" axis="-1 1 0" range="30 100"/>
          <geom type="capsule" fromto="0 0 0 -0.2 0.2 -0.3" size="0.08" mass="0.1" rgba="0.8 0.6 0.4 1"/>
        </body>
      </body>

      <!-- 后右腿 -->
      <body name="back_right_hip" pos="-0.2 -0.2 0">
        <joint name="br_hip" type="hinge" axis="0 0 1" range="-40 40"/>
        <geom type="capsule" fromto="0 0 0 -0.2 -0.2 0" size="0.08" mass="0.1" rgba="0.8 0.6 0.4 1"/>
        <body name="back_right_ankle" pos="-0.2 -0.2 0">
          <joint name="br_ankle" type="hinge" axis="-1 -1 0" range="30 100"/>
          <geom type="capsule" fromto="0 0 0 -0.2 -0.2 -0.3" size="0.08" mass="0.1" rgba="0.8 0.6 0.4 1"/>
        </body>
      </body>

    </body>
  </worldbody>

  <actuator>
    <motor name="fl_hip_motor"   joint="fl_hip"   gear="150" ctrlrange="-1 1" ctrllimited="true"/>
    <motor name="fl_ankle_motor" joint="fl_ankle" gear="150" ctrlrange="-1 1" ctrllimited="true"/>
    <motor name="fr_hip_motor"   joint="fr_hip"   gear="150" ctrlrange="-1 1" ctrllimited="true"/>
    <motor name="fr_ankle_motor" joint="fr_ankle" gear="150" ctrlrange="-1 1" ctrllimited="true"/>
    <motor name="bl_hip_motor"   joint="bl_hip"   gear="150" ctrlrange="-1 1" ctrllimited="true"/>
    <motor name="bl_ankle_motor" joint="bl_ankle" gear="150" ctrlrange="-1 1" ctrllimited="true"/>
    <motor name="br_hip_motor"   joint="br_hip"   gear="150" ctrlrange="-1 1" ctrllimited="true"/>
    <motor name="br_ankle_motor" joint="br_ankle" gear="150" ctrlrange="-1 1" ctrllimited="true"/>
  </actuator>

</mujoco>